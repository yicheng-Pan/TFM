<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Pablo"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address_phone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/address_name"
        android:text="657011540"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address_address"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/address_name"
        android:layout_marginStart="20dp"
        android:text="Av.Oporto,73"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/address_address"
        android:background="@color/grey" />
</RelativeLayout>